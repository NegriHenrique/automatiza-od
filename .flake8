[flake8]
exclude = 
    .venv,
    __pycache__,
    .git,
    build,
    build_temp,
    dist,
    distribuicao,
    distribuicao_completa,
    *.egg-info,
    htmlcov

max-line-length = 88
max-complexity = 12
ignore = 
    E203,
    W503,
    F824,
    F821,
    E501,
    E402,
    F401,
    F811

per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811,E402
    *_test.py:F401,F811,E402
    build_exe.py:W291,W293,E501
    gerar_od_gui.py:E501
    gerador_od_completo.py:E501
