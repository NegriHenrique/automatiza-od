[flake8]
exclude = 
    .venv,
    __pycache__,
    .git,
    build,
    build_temp,
    dist,
    distribuicao,
    distribuicao_completa,
    *.egg-info,
    htmlcov

max-line-length = 88
max-complexity = 12
ignore = 
    E203,  # Whitespace before ':'
    W503,  # Line break before binary operator
    F824,  # Duplicate string in list
    F821,  # Undefined name
    E501,  # Line too long
    E402,  # Module level import not at top of file (for tests)
    F401,  # Import not used (handled per-file)
    F811   # Redefinition of unused name (for tests)

per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811,E402
    *_test.py:F401,F811,E402
    build_exe.py:W291,W293,E501
    gerar_od_gui.py:E501
    gerador_od_completo.py:E501
