#!/bin/bash
# Pre-commit hook para Ordem do Dia
# Este script executa antes de cada commit para garantir qualidade do c√≥digo

echo "üöÄ Executando verifica√ß√µes pre-commit..."

# Cores para output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Contador de erros
ERRORS=0

# Fun√ß√£o para printar mensagens coloridas
print_status() {
    case $2 in
        "success") echo -e "${GREEN}‚úÖ $1${NC}" ;;
        "error") echo -e "${RED}‚ùå $1${NC}" ;;
        "warning") echo -e "${YELLOW}‚ö†Ô∏è $1${NC}" ;;
        *) echo "‚ÑπÔ∏è $1" ;;
    esac
}

# Verificar se estamos no diret√≥rio correto
if [ ! -f "gerar_od.py" ]; then
    print_status "N√£o encontrado no diret√≥rio raiz do projeto" "error"
    exit 1
fi

# 1. Verificar se Python est√° dispon√≠vel
print_status "Verificando Python..." "info"
if ! command -v python &> /dev/null; then
    print_status "Python n√£o encontrado. Instale Python 3.11+" "error"
    exit 1
fi

PYTHON_VERSION=$(python -c "import sys; print('.'.join(map(str, sys.version_info[:2])))")
print_status "Python $PYTHON_VERSION detectado" "success"

# 2. Verificar ambiente virtual
if [ -z "$VIRTUAL_ENV" ]; then
    print_status "Ambiente virtual n√£o ativado. Ativando .venv..." "warning"
    if [ -f ".venv/Scripts/activate" ]; then
        source .venv/Scripts/activate
        print_status "Ambiente virtual ativado" "success"
    elif [ -f ".venv/bin/activate" ]; then
        source .venv/bin/activate
        print_status "Ambiente virtual ativado" "success"
    else
        print_status "Ambiente virtual n√£o encontrado. Execute: python -m venv .venv" "error"
        exit 1
    fi
fi

# 3. Verificar depend√™ncias
print_status "Verificando depend√™ncias..." "info"
if ! python -c "import pytest, black, flake8" &> /dev/null; then
    print_status "Instalando depend√™ncias de desenvolvimento..." "warning"
    pip install pytest black flake8 > /dev/null 2>&1
fi

# 4. Executar formata√ß√£o autom√°tica (Black)
print_status "Verificando formata√ß√£o de c√≥digo..." "info"
if ! black --check . > /dev/null 2>&1; then
    print_status "Aplicando formata√ß√£o autom√°tica..." "warning"
    black .
    print_status "C√≥digo formatado. Adicione as mudan√ßas e tente o commit novamente." "warning"
    exit 1
else
    print_status "Formata√ß√£o de c√≥digo OK" "success"
fi

# 5. Linting (Flake8)
print_status "Executando linting..." "info"
if ! flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics > /dev/null 2>&1; then
    print_status "Erros de linting encontrados:" "error"
    flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
    ERRORS=$((ERRORS + 1))
else
    print_status "Linting OK" "success"
fi

# 6. Testes r√°pidos
print_status "Executando testes r√°pidos..." "info"
if ! python -m pytest test_simple.py -q > /dev/null 2>&1; then
    print_status "Testes r√°pidos falharam:" "error"
    python -m pytest test_simple.py -v
    ERRORS=$((ERRORS + 1))
else
    print_status "Testes r√°pidos OK" "success"
fi

# 7. Verificar arquivos obrigat√≥rios
print_status "Verificando arquivos obrigat√≥rios..." "info"
REQUIRED_FILES=("gerar_od.py" "gerador_od_completo.py" "requirements.txt" "config_dias_filmagem.json")
for file in "${REQUIRED_FILES[@]}"; do
    if [ ! -f "$file" ]; then
        print_status "Arquivo obrigat√≥rio ausente: $file" "error"
        ERRORS=$((ERRORS + 1))
    fi
done

if [ $ERRORS -eq 0 ]; then
    print_status "Verifica√ß√µes obrigat√≥rias OK" "success"
fi

# 8. Testes de integra√ß√£o (opcional, apenas em main)
BRANCH=$(git rev-parse --abbrev-ref HEAD)
if [ "$BRANCH" = "main" ]; then
    print_status "Branch main detectada - executando testes completos..." "info"
    if ! python -m pytest tests/ -q > /dev/null 2>&1; then
        print_status "Testes de integra√ß√£o falharam (n√£o-bloqueante em pre-commit)" "warning"
        print_status "Execute 'pytest tests/' para ver detalhes" "warning"
    else
        print_status "Testes de integra√ß√£o OK" "success"
    fi
fi

# 9. Verifica√ß√£o final
# Build do execut√°vel √© verificado apenas no pre-push para evitar loops

# Resultado final
echo ""
if [ $ERRORS -eq 0 ]; then
    print_status "Todas as verifica√ß√µes passaram! Commit autorizado." "success"
    exit 0
else
    print_status "$ERRORS erro(s) encontrado(s). Corrija antes de commitar." "error"
    echo ""
    echo "Dicas:"
    echo "   - Execute 'black .' para formatar c√≥digo"
    echo "   - Execute 'flake8 .' para ver erros de linting" 
    echo "   - Execute 'pytest test_simple.py' para executar testes b√°sicos"
    exit 1
fi
